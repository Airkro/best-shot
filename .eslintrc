{
  "extends": [
    "@nice-move/eslint-config-base",
    "plugin:node/recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "camelcase": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "promise/avoid-new": "off",
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": [
          "webpack",
          "@babel/polyfill",
          "@best-shot/core",
          "@best-shot/cli",
          "@best-shot/inspector",
          "best-shot-addons",
          "best-shot-dev-server"
        ]
      }
    ]
  }
}

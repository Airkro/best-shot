{
  "private": true,
  "name": "best-shot",
  "version": "0.0.0",
  "description": "A webpack config tool chain",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/best-shot/best-shot",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-shot/best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/best-shot/best-shot/issues"
  },
  "scripts": {
    "analyze": "best-shot analyze",
    "build": "best-shot prod",
    "dev": "best-shot dev",
    "inspect": "best-shot inspect --stamp test",
    "lint": "nice-move lint",
    "serve": "best-shot serve",
    "test": "ava --verbose",
    "watch": "best-shot watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "core-js": "^3.9.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@nice-move/cli": "^0.5.16",
    "@nice-move/commitlint-config": "^0.0.0",
    "@nice-move/eslint-config-base": "^0.5.24",
    "@nice-move/prettier-config": "^0.4.1",
    "@nice-move/stylelint-config": "^0.5.4",
    "@types/react": "^17.0.2",
    "ava": "^3.15.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.20.0",
    "eslint-plugin-ava": "^11.0.0",
    "garou": "^0.1.16",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "stylelint": "^13.11.0",
    "typescript": "^4.1.5",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0"
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  },
  "engines": {
    "node": "^12.18 || ^14"
  },
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:ava/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "nice-move lint && ava --fail-fast"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  },
  "x-readme": {
    "logo": "https://cdn.jsdelivr.net/gh/best-shot/best-shot/packages/core/logo.svg"
  }
}
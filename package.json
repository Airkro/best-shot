{
  "private": true,
  "name": "best-shot",
  "version": "0.0.0",
  "description": "A webpack config tool chain",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/best-shot/best-shot",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-shot/best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/best-shot/best-shot/issues"
  },
  "scripts": {
    "analyze": "best-shot analyze",
    "format": "nice-move lint",
    "inspect": "best-shot inspect --stamp test",
    "serve": "best-shot serve",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "core-js": "^3.8.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nice-move/cli": "^0.5.8",
    "@nice-move/eslint-config-base": "^0.4.0",
    "@nice-move/prettier-config": "^0.3.5",
    "@nice-move/stylelint-config": "^0.4.2",
    "@types/react": "^16.9.56",
    "ava": "^3.13.0",
    "eslint": "^6.8.0",
    "eslint-plugin-ava": "^10.5.0",
    "husky": "^4.3.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "typescript": "^4.1.2",
    "webpack": "^4.44.2"
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  },
  "engines": {
    "node": "^12.14 || ^14"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:ava/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "nice-move lint && ava --verbose"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  },
  "x-readme": {
    "logo": "https://cdn.jsdelivr.net/gh/best-shot/best-shot/packages/core/logo.svg"
  }
}
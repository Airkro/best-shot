{
  "private": true,
  "name": "best-shot",
  "version": "0.0.0",
  "description": "A webpack config wrapper",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/best-shot/best-shot",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-shot/best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/best-shot/best-shot/issues"
  },
  "scripts": {
    "format": "nice-move lint",
    "inspect": "best-shot inspect --stamp test",
    "serve": "best-shot serve",
    "test": "ava --verbose"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "core-js": "^3.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.11.5",
    "@nice-move/cli": "^0.5.0",
    "@nice-move/eslint-config-base": "^0.3.11",
    "@nice-move/prettier-config": "^0.3.2",
    "@nice-move/stylelint-config": "^0.4.1",
    "@types/react": "^16.9.49",
    "ava": "^3.13.0",
    "eslint": "^6.8.0",
    "eslint-plugin-ava": "^10.5.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2"
  },
  "resolutions": {
    "bin-wrapper": "npm:bin-wrapper-china"
  },
  "engines": {
    "node": "^12.18 || ^14"
  },
  "eslintConfig": {
    "extends": [
      "@nice-move/eslint-config-base",
      "plugin:ava/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nice-move lint && ava --verbose"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}
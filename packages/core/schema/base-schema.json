{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration of best-shot",
  "type": "object",
  "properties": {
    "outputPath": {
      "default": "dist",
      "description": "It can be a relative path. Additional placeholder: [mode]/[mode:shorthand]/[platform]",
      "minLength": 3,
      "title": "Same as `output.path` of `webpack`",
      "type": "string"
    },
    "publicPath": {
      "default": "/",
      "minLength": 1,
      "title": "Same as `output.publicPath` of `webpack`",
      "type": "string"
    }
  },
  "required": [
    "outputPath",
    "publicPath"
  ]
}
